{
	"name": "pl_convert_possession",
	"properties": {
		"activities": [
			{
				"name": "Possession from JSON to CSV",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".csv"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['match_id']"
								},
								"sink": {
									"name": "match_id"
								}
							},
							{
								"source": {
									"path": "$['id']"
								},
								"sink": {
									"name": "id",
									"type": "Int64"
								}
							},
							{
								"source": {
									"path": "$['subtype']"
								},
								"sink": {
									"name": "subtype"
								}
							},
							{
								"source": {
									"path": "$['event_incident_typefk']"
								},
								"sink": {
									"name": "event_incident_typefk",
									"type": "Int64"
								}
							},
							{
								"source": {
									"path": "$['elapsed']"
								},
								"sink": {
									"name": "elapsed",
									"type": "Int64"
								}
							},
							{
								"source": {
									"path": "$['elapsed_plus']"
								},
								"sink": {
									"name": "elapsed_plus",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['del']"
								},
								"sink": {
									"name": "del",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['homepos']"
								},
								"sink": {
									"name": "homepos"
								}
							},
							{
								"source": {
									"path": "$['awaypos']"
								},
								"sink": {
									"name": "awaypos"
								}
							},
							{
								"source": {
									"path": "$['injury_time']"
								},
								"sink": {
									"name": "injury_time",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['goal_type']"
								},
								"sink": {
									"name": "goal_type",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['card_type']"
								},
								"sink": {
									"name": "card_type",
									"type": "String"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "ds_possession_raw",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ds_possession",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}