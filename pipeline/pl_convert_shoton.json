{
	"name": "pl_convert_shoton",
	"properties": {
		"activities": [
			{
				"name": "Shoton from JSON to CSV",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".csv"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['match_id']"
								},
								"sink": {
									"name": "match_id"
								}
							},
							{
								"source": {
									"path": "$['id']"
								},
								"sink": {
									"name": "id",
									"type": "Int64"
								}
							},
							{
								"source": {
									"path": "$['subtype']"
								},
								"sink": {
									"name": "subtype"
								}
							},
							{
								"source": {
									"path": "$['event_incident_typefk']"
								},
								"sink": {
									"name": "event_incident_typefk",
									"type": "Int64"
								}
							},
							{
								"source": {
									"path": "$['elapsed']"
								},
								"sink": {
									"name": "elapsed",
									"type": "Int64"
								}
							},
							{
								"source": {
									"path": "$['elapsed_plus']"
								},
								"sink": {
									"name": "elapsed_plus",
									"type": "Int64"
								}
							},
							{
								"source": {
									"path": "$['del']"
								},
								"sink": {
									"name": "del",
									"type": "Int64"
								}
							},
							{
								"source": {
									"path": "$['coordinates']"
								},
								"sink": {
									"name": "coordinates",
									"type": "Int64"
								}
							},
							{
								"source": {
									"path": "$['goal_type']"
								},
								"sink": {
									"name": "goal_type",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['card_type']"
								},
								"sink": {
									"name": "card_type",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['player1']"
								},
								"sink": {
									"name": "player1",
									"type": "Int64"
								}
							},
							{
								"source": {
									"path": "$['team']"
								},
								"sink": {
									"name": "team",
									"type": "Int64"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "ds_source",
						"type": "DatasetReference",
						"parameters": {
							"file_name": "shoton.json"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "ds_sink",
						"type": "DatasetReference"
					}
				]
			}
		],
		"folder": {
			"name": "JSON to CSV"
		},
		"annotations": []
	}
}